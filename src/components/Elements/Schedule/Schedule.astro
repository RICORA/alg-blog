---
type Schedule = {
  title: Element
  date: string
  detail: string
}

type Props = {
  schedules: Schedule[]
}
const { schedules } = Astro.props
---

<div class="my-6 flex flex-col gap-4 rounded-lg border bg-bg-default p-4">
  {
    schedules.map((schedule) => (
      <div class="space-y-2 border-t pt-2 *:m-0 first:border-0 first:pt-0">
        <p class="text-lg font-bold">{schedule.title}</p>
        <p class="italic">{schedule.date}</p>
        <p class="text-sm text-fg-muted">{schedule.detail}</p>
      </div>
    ))
  }
</div>
