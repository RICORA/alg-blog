import { Icon, type IconName } from "@/components/Elements/Icon"

type Link = {
  title: string
  icon: IconName
  href: string
}
const links: Link[] = [
  {
    title: "ホーム",
    icon: "tabler:home",
    href: "/",
  },
  {
    title: "お知らせ",
    icon: "tabler:news",
    href: "/news",
  },
  {
    title: "活動記録",
    icon: "tabler:activity",
    href: "/activities",
  },
  {
    title: "作品紹介",
    icon: "tabler:star",
    href: "/works",
  },
  {
    title: "タグ",
    icon: "tabler:tag",
    href: "/tags",
  },
  {
    title: "ブログ",
    icon: "tabler:archive",
    href: "/archives",
  },
  {
    title: "RICORAについて",
    icon: "tabler:info-circle",
    href: "/about-us",
  },
