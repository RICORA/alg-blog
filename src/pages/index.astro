type ContentType = {
  headerTitle: string
  headerIcon: IconName
  description: string
  linkTitle: string
  link: string
}

const contents: ContentType[] = [
  {
    headerTitle: "RICORA Programming Teamについて",
    headerIcon: "twemoji:desktop-computer",
    description:
      "RICORA Programming Teamは東京理科大学 野田キャンパスにて活動するプログラミングサークルです。活動内容活動内容活動内容活動内容活動内容活動内容活動内容活動内容活動内容。",
    linkTitle: "もっと詳しく見る",
    link: "/about-us",
  },
  {
    headerTitle: "最新ニュース",
    headerIcon: "twemoji:newspaper",
    description: "ここに記事を3つくらい並べる。",
    linkTitle: "記事一覧へ",
    link: "/archives",
  },
  {
    headerTitle: "お問い合わせ",
    headerIcon: "twemoji:handshake",
    description: "依頼依頼依頼依頼依頼依頼依頼依頼依頼依頼依頼依頼依頼依頼入部入部入部入部入部入部入部。",
    linkTitle: "お問い合わせ・入部希望者はこちら",
    link: "/contact",
  },
]
---

<BaseLayout
  title="RICORA Programming Team"
  titleSuffix=""
  description="東京理科大学 電子計算機研究会 プログラミング班"
  og={{
    url: Astro.site!,
  }}
>
  <main class="flex flex-1 flex-col gap-6 py-12">
    {
      contents.map((content) => (
        <section>
          <div class="mx-auto max-w-screen-xl">
            <div class="rounded-lg bg-card p-6 md:px-12 md:py-8 dark:bg-muted">
              <h2 class="flex flex-row items-center text-2xl font-black md:text-4xl">
                <>
                  <Icon name={content.headerIcon} class="w-24 flex-none p-4 md:w-28 md:p-6" />
                  <span>{content.headerTitle}</span>
                </>
              </h2>
              <p class="my-6 text-lg text-gray-500">{content.description}</p>

              <a
                href={content.link}
                class="flex flex-row items-center justify-center rounded-lg border border-gray-300 bg-gray-50 px-5 py-2.5 text-center transition hover:brightness-90 dark:border-gray-700 dark:bg-gray-950"
              >
                {content.linkTitle}
                <Icon name="tabler:chevron-right" class="w-8 pl-2" />
              </a>
            </div>
          </div>
        </section>
      ))
    }
  </main>
</BaseLayout>
